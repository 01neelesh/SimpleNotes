<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/bg_tint_overlay"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageButton
            android:id="@+id/add_todo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/inactive_icon_clr"
            android:background="@drawable/round_shape"
            android:contentDescription="@string/add_todo"
            app:srcCompat="@drawable/baseline_add_task_24" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/inactive_icon_clr"
            android:background="@drawable/round_shape"
            android:contentDescription="@string/delete"
            app:srcCompat="@drawable/baseline_delete_outline_24" />

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/inactive_icon_clr"
            android:background="@drawable/round_shape"
            android:contentDescription="@string/edit"
            app:srcCompat="@drawable/baseline_edit_24" />
    </LinearLayout>


</LinearLayout>
