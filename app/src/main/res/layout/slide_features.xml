<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gradient_start"
    app:cardBackgroundColor="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/dark_surface">

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_features"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/ledger_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:contentDescription="@string/image_desc_features"
            android:layout_marginBottom="16dp" />

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Cool Features!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Description Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Say goodbye to financial confusion! Our cool ledger feature provides a clear and simple overview of your shared money, making settling up a breeze."
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>