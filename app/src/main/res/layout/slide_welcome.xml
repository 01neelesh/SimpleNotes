<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/gradient_end"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/dark_surface"
        android:padding="24dp">

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_welcome"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/add_note"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:contentDescription="@string/image_desc_welcome"
            android:layout_marginBottom="16dp" />

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Simple Notes!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular" />

        <!-- Description Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:padding="16dp"
            android:text="Create notes to organize your thoughts. Tap the + button to add a note, then swipe to explore features!"
            android:textColor="@color/secondary_text"
            android:scrollbars="vertical"
            android:textSize="14sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>